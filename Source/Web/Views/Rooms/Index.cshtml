@model Web.Models.Rooms.RoomsIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Номер
            </th>
            <th>
                Тип
            </th>
            <th>
                Капацитет
            </th>
            <th>
                Свободна
            </th>
            <th>
                Цена на заето легло (възрастен)
            </th>
            <th>
                Цена на заето легло (дете)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Free)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BedPriceAdult)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BedPriceChild)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Number">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Number">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    <ul class="pagination">
        @for (var i = 1; i <= Model.Pager.PagesCount; i++)
        {
            <li class="page-item @(i == Model.Pager.CurrentPage ? "active" : "")">
                <a asp-route-Pager.CurrentPage="@i" class="page-link">@i</a>
            </li>
        }
    </ul>
</table>
